
@model StockDB.Model.Shaplona

<style type="text/css">
    .showimgmodalheader {
        position: absolute;
    }

    .exitsec {
        position: relative;
        top: -2rem;
        right: 0;
    }
</style>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header ">
                <h5 class="modal-title text-center" id="exampleModalLabel">صوره @Model.shap_name</h5>
                <div class="showimgmodalheader">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">

                        <span class="exitsec" aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            @*<div class="modal-body">*@
            <img src=@string.Format("images/shaplon/{0}/{1}",Model.shap_id, Model.shap_pic) style="width:100%;max-height:100%">
            @*</div>*@

        </div>
    </div>
</div>

