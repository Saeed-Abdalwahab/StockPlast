@model StockDB.Model.Safe

@{
    ViewBag.Title = "اضافه خزنه";
}
@Styles.Render("~/Content/jquery")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Content/chosenJavaScript")
@Styles.Render("~/Content/chosenCSS")
<h2>اضافة خزينة جديدة</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Safe</h4>
            <hr />*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.emp_id, "امين الخزينة", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-5">
                @*<input type="text" class="form-control" placeholder="-- بحث بإسم امين الخزينة --" id="EmpSearchText" style="text-align:right" />*@
                @Html.DropDownList("emp_id",ViewBag.emp_id as SelectList,"--اختار امين الخزينة--", htmlAttributes: new { @class = "form-control SafeKeeberCSS" })
                @Html.ValidationMessageFor(model => model.emp_id, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.emp_id, new { id = "EmpIdHF" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.safe_name, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.safe_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.safe_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.safe_totalBalance, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.safe_totalBalance, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.safe_totalBalance, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.safe_date, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.safe_date, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control"}
                })
                @Html.ValidationMessageFor(model => model.safe_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("رجوع", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $('#safe_date').datepicker({
                dateFormat: 'yy/mm/dd',
                minView: 2,
            });


        });

           $(".SafeKeeberCSS").chosen({
            width: '100%',
            no_results_text: "لايوجد امين خزينة بهذا الاسم",
            search_contains: true
        });




    });
</script>