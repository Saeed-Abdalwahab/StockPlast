@model StockDB.Model.Customer

@{
    ViewBag.Title = "اضافه عميل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>اضافة عميل جديد</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

