@model StockDB.Model.JobDescription

@{
    ViewBag.Title = "اضافه تخصص";

}

<h2>اضافة بيانات تخصص جديد</h2>
@Styles.Render("~/Content/jquery")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Content/chosenJavaScript")
@Styles.Render("~/Content/chosenCSS")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>JobDescription</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.JobID, "الوظيفة", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-4">
                @Html.DropDownList("JobID", (IEnumerable<SelectListItem>)ViewBag.Job_id, " -- اختار الوظيفة --", new { @class = "form-control SafeKeeberCSS" })
                @Html.ValidationMessageFor(model => model.JobID, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.JobID)
            </div>
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="اضافة" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("رجوع الي قائمة التخصصات", "Index", "JobDescription")  |  
    @Html.ActionLink("الذهاب الي قائمة الوظائف", "Index", "Job")
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $('#safe_date').datepicker({
                dateFormat: 'yy/mm/dd',
                minView: 2,
            });
        });
           $(".SafeKeeberCSS").chosen({
            width: '100%',
            no_results_text: "لايوجد وظيفة بهذا الاسم",
            search_contains: true
        });
    });
</script>