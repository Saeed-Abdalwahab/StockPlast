@model StockDB.Model.AspNetUserWorker

@{
    ViewBag.Title = "المستخدمين";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_right">
            <h3>
                @ViewBag.Title<small> - حذف</small>
            </h3>
        </div>

    </div>
    <div class="ln_solidTitle"></div>
    <div class="clearfix"></div>
    <div class="row">
        @Html.HiddenFor(model => model.WorkerId)
        @Html.HiddenFor(model=>model.UserId)
        <div class="col-md-12">
            <div class="x_content">
                <div class="form-horizontal form-label-left">
                  
                    <div class="item form-group">
                        @Html.Label("اسم المستخدم", htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DisplayFor(model => model.AspNetUser.UserName)
                        </div>
                    </div>
                    <div class="item form-group">
                        @Html.Label("البريد الالكترونى", htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DisplayFor(model => model.AspNetUser.Email)
                        </div>
                    </div>
                    <div class="item form-group">
                        @Html.Label("نوع الحساب", htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DisplayFor(model => model.AspNetUserType.Name)
                        </div>
                    </div>
                    @*<div class="item form-group">
                        @Html.LabelFor(model => model.AccountStatus, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DisplayFor(model => model.AccountStatus)
                        </div>
                    </div>*@
                    @*<div class="item form-group">
                            @Html.LabelFor(model => model.ManagmentSpecializedName, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.DisplayFor(model => model.ManagmentSpecializedName)
                            </div>
                        </div>*@
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <input type="submit" value="حذف" class="btn btn-default" />
                                @Html.ActionLink("إلغاء", "Index", "SecurityUsers", null, new { @class = "btn btn-default" })
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

