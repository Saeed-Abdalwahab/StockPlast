@model PagedList.IPagedList<StockPortal.ViewModel.SecurityUserData>
@using PagedList.Mvc;

@{
    ViewBag.Title = "المستخدمين";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_right">
            <h3>@ViewBag.Title</h3>
        </div>

    </div><div class="ln_solidTitle"></div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        <p>
                            @Html.ActionLink("إنشاء جديد", "Create", "SecurityUsers", null, new { @class = "btn btn-default" })
                        </p>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table table-striped">

                        <tr>
                            
                            @*<th>إسم الموظف</th>*@
                            <th>إسم الدخول</th>
                            <th>البريد الإلكترونى</th>
                            <th>نوع الحساب</th>
                            <th>حالة الحساب</th>

                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.WorkerName)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserTypeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccountStatus)
                                </td>
                                <td>
                                    @Html.ActionLink("تعديل", "Edit", new { id = item.UserId }) |
                                    @*@Html.ActionLink("تفاصيل", "Details", new { id = item.UserId }) |*@
                                    @*@Html.ActionLink("الأدوار", "GetUserRoles", "SecurityUserRoles", new { id = item.UserId }, null) |*@
                                    @Html.ActionLink("إعادة كلمة المرور", "Reset", new { id = item.UserId }) |
                                    @Html.ActionLink("حذف", "Delete", new { id = item.UserId })
                                </td>
                            </tr>

                        }
                    </table>
                    <br />
                    صفحة @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) من @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

                </div>

            </div>
        </div>
    </div>
</div>
